datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      String   // "owner"
  createdAt DateTime @default(now())
}

model Student {
  id                Int      @id @default(autoincrement())
  studentName       String
  parentName        String
  parentEmail       String   @unique
  password          String
  standard          String
  medium            String
  schoolName        String
  lastStandardMarks String?
  schoolTiming      String?
  contactNumber     String
  address           String?
  
  batches           StudentBatch[]   // Many to Many relation
           
}

model Batch {
  id        Int        @id @default(autoincrement())
  name      String
  startTime String
  endTime   String
  students  StudentBatch[]   // Many to Many relation
}

model Message {
  id        Int      @id @default(autoincrement())
  batchId   Int?
  studentId Int?
  content   String
  createdAt DateTime @default(now())
}

model Timetable {
  id        Int      @id @default(autoincrement())
  studentId Int
  day       String
  subjects  String   // JSON string
}

model Fee {
  id             Int      @id @default(autoincrement())
  studentId      Int
  totalFee       Int
  paidAmount     Int
  lastPaymentDate DateTime?
}

model StudentBatch {
  id        Int      @id @default(autoincrement())
  studentId Int
  batchId   Int

  Student   Student  @relation(fields: [studentId], references: [id])
  Batch     Batch    @relation(fields: [batchId], references: [id])
}